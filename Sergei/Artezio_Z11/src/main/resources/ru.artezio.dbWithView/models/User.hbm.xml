<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.artezio.dbWithView.models.User" table="users_site">
        <id name="userId" column="user_id" type="int" >
            <generator class="increment"/>
        </id>
        <property name="name" column="user_name" type="string"/>
        <property name="password" column="user_password" type="string"/>
        <many-to-one name="role" column="role_id" class="ru.artezio.dbWithView.dto.Role" cascade="save-update"/>
    </class>
</hibernate-mapping>